{
  "cpp-gcc":{
    "folder":"cpp",
    "req":["g++"],
    "build":"g++ -O3 -march=native -flto -DNDEBUG <src> -o <out>"
  },
  "cpp-clang":{
    "folder":"cpp",
    "req":["clang++"],
    "build":"clang++ -O3 -march=native -flto -DNDEBUG <src> -o <out>"
  },
  "java":{
    "folder":"java",
    "req":["javac","java"],
    "build":"javac -d ./tmp <src>",
    "out-file":"<test-src>.class",
    "run":"java -XX:+OptimizeFill <app>"
  },
  "++elixir":{
    "//":"It's really very slow",
    "req":["elixir","elixirc"],
    "build":"elixirc --no-debug-info <src> -o tmp",
    "//":"'out' is used ONLY for measuring the file size",
    "out-file":"Elixir.Main.beam",
    "run":"elixir --erl \"+S <threads-count> +A <threads-count> +sbt u +sub true -smp enable\" -e 'Main.main()' -- "
  },
  "haskell":{
    "req":["stack"],
    "build":"stack ghc -- -Wno-x-partial -threaded -rtsopts -O2 -rtsopts -with-rtsopts=\"-A32m -H32m\" <src> -o <out>",
    "run":"./<app> <input> +RTS -N8",
    "ext":"hs"
  },
  "rust":{
    "folder":"rust",
    "req":["rustc"],
    "build":"rustc -C opt-level=3 -C target-cpu=native -C lto=fat -C codegen-units=1 -C panic=abort <src> -o <out>"
  },
  "!!python":{
    "//":"slower than pypy3",
    "req":["python"],
    "run":"python -OO -B -E -u <app>"
  },
  "pypy3":{
    "folder":"python",
    "req":["pypy3"],
    "run":"pypy3 -X no_gc_thread -OO -B -E -u <app>"
  },
  "++perl":{
    "//":"It's slow",
    "req":["perl"]
  },
  "nodejs":{
    "folder":"js",
    "req":["node"],
    "run":"node --no-concurrent-sweeping --predictable --max-old-space-size=4096 <app>"
  },
  "!!denojs":{
    "//":"something like node",
    "folder":"js",
    "req":["deno"],
    "build":"deno compile --unstable --quiet --allow-read --allow-write --output <out> <src>"
  },
  "nim":{
    "req":["nim"],
    "build":"nim c -d:release --threads:on --profiler:on --verbosity:0 --opt:speed --passC:\"-march=native\" --passL:\"-s\"  -o=<out> <src>"
  },
  "go":{
    "req":["go"],
    "build":"go build -ldflags=\"-s -w\" -trimpath -o <out> <src>"
  },
  "ocaml":{
    "req":["ocaml","ocamlopt"],
    "ext":"ml",
    "build":"ocamlopt -inline 100 -unbox-closures -nodynlink -noassert -unsafe -ccopt -O3 -ccopt -march=native -o <out> <src>"
  }
}